# Variables d'environnement pour production
# IMPORTANT: Ne jamais commiter ce fichier avec de vraies valeurs!

# Django Configuration
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Base de données PostgreSQL
POSTGRES_DB=cv_analyzer_prod
POSTGRES_USER=cv_analyzer_user
POSTGRES_PASSWORD=your-strong-database-password

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Superutilisateur Django
DJANGO_SUPERUSER_EMAIL=admin@cvanalyzer.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# Configuration Email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Configuration IA (optionnel)
HUGGINGFACE_TOKEN=your-huggingface-token
OPENAI_API_KEY=your-openai-key

# Configuration de sécurité
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Configuration Celery
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0
